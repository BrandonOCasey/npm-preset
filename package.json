{
  "name": "npm-preset",
  "version": "1.0.0",
  "description": "Faster, sharable, and parallel npm scripts",
  "bin": {
    "npmp": "./src/npmp.js",
    "npm-preset": "./src/npmp.js"
  },
  "scripts": {
    "test:manual": "node test/scripts/setup.js",
    "test:clean": "node test/scripts/clean.js",
    "prepublishOnly": "npm run test",
    "test": "ava test/unit/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brandonocasey/npm-preset.git"
  },
  "author": "brandonocasey <brandonocasey@gmail.com>",
  "license": "MIT",
  "files": [
    "src/",
    "test/"
  ],
  "dependencies": {
    "bluebird": "^3.5.0",
    "find-root": "^1.1.0",
    "intercept-stdout": "^0.1.2",
    "npm-path": "^2.0.4",
    "shell-quote": "^1.6.1"
  },
  "ava": {
    "timeout": "15s",
    "require": "babel-register"
  },
  "babel": {
    "presets": [
      "@ava/stage-4"
    ]
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-register": "^6.26.0",
    "shelljs": "^0.7.8",
    "uuid": "^3.1.0"
  }
}
